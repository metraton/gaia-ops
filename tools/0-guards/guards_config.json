{
  "enforcement_enabled": true,
  "guards": {
    "phase_0_clarification": {
      "ambiguity_threshold": 0.3,
      "enforce_on_generic_terms": true,
      "generic_terms": ["el servicio", "la API", "el cluster", "production"]
    },
    "phase_1_routing": {
      "min_confidence": 0.5,
      "require_agent_existence": true,
      "fallback_agent": "devops-developer"
    },
    "phase_2_context": {
      "required_sections": [
        "project_details",
        "operational_guidelines"
      ],
      "validate_paths_exist": true
    },
    "phase_4_approval": {
      "mandatory_for_tiers": ["T3"],
      "require_explicit_approval": true,
      "log_all_approvals": true
    },
    "phase_5_realization": {
      "require_plan": true,
      "validate_before_execute": true
    },
    "phase_6_ssot": {
      "update_after_tiers": ["T3"],
      "validate_json_syntax": true,
      "backup_before_update": true
    }
  },
  "logging": {
    "log_dir": ".claude/logs",
    "log_file": "guards.jsonl",
    "verbose": true
  }
}